{
  "extends": ["next/core-web-vitals"],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": ["error", "always"],
    "no-duplicate-imports": "error",
    "no-unreachable": "error"
  },
  "ignorePatterns": ["node_modules/", ".next/", "coverage/", "prisma/"]
}

