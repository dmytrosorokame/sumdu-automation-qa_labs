{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": "warn",
    "@typescript-eslint/no-explicit-any": "warn",
    "no-console": "warn",
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "no-duplicate-imports": "error",
    "no-unused-expressions": "error",
    "no-unreachable": "error"
  },
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "coverage/",
    "prisma/"
  ]
}

